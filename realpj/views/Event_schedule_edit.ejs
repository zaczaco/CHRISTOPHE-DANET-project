<%- include("partial_headers.ejs"); %>

<h1>Single car editor form</h1>

<p><a href='/Event_schedule/list'>Back to the list</a></p>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/Event_schedule/update/<%= oneEvent.Id_Event_schedule %>' method='post' 
            enctype='application/x-www-form-urlencoded'>
<table class="table table-striped table-bordered table-hover">            
    <tr><td>Name:</td>
        <td>
            <select name='Name_event'>
              <% for (var E of Event) { %>
                    <option value='<%= e.Id_Event_schedule %>' 
                        <%- e.Id_Event_schedule==oneEvent. ? "selected='selected'" : "" %>
                    > <%= b.Name_event %></option>
              <% } %>
            </select>
        </td></tr>
    <tr><td>Model:</td>
        <td><input type='text' name='Name_event' value='<%= oneCar.Name_event %>' /></td></tr>
     <tr><td>Price?</td>   

        <td><input type='number' name='Price' value='<%= oneEvent.Price %>' /></td></tr>
    <tr><td>Price?</td>   

        <td><input type='text' name='superviser' value='<%= oneEvent.Superviser %>' /></td></tr>
        <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>

        <td><input type='date' name='Start_time' value='<%= oneEvent.Start_time %>' /></td></tr>
    <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>

    <td><input type='number' name='End_time' value='<%= oneEvent.End_time %>' /></td></tr>
    <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr> 

</table>
</form>

</body>
</html>